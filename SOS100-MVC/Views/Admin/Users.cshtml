@model List<SOS100_MVC.Dtos.UserDto>

<a asp-controller="Admin"
   asp-action="CreateUser"
   class="btn btn-primary">Skapa ny användare</a>

<h2>Användare</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>ID</th>
        <th>Användarnamn</th>
        <th>Email</th>
        <th>Förnamn</th>
        <th>Efternamn</th>
        <th>Roll</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserID</td>
            <td>@user.Username</td>
            <td>@user.Email</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Role</td>
            <td>
                <a asp-controller="Admin" asp-action="EditUser"
                   asp-route-id="@user.UserID">Ändra</a>
                
                <form asp-action="DeleteUser"
                      asp-route-id="@user.UserID"
                      method="post"
                      onsubmit="return confirm('Är du säker?');">
                    <button type="submit">Ta bort</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>